{
  "name": "EscapeRoomv1",
  "version": "1.0.0",
  "description": "TBD",
  "author": "Brent,Brent,Jesus,Kevin,&Jorge",
  "license": "MIT",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TBD"
  },
  "engine": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "homepage": "EscapeRoom",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:prod": "node server.js",
    "start:dev": "yarn kill && concurrently \"nodemon\" \"yarn client\"",
    "server": "yarn kill && nodemon",
    "client": "cd client && yarn start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn build",
    "heroku-postbuild": "yarn build",
    "kill": "kill-port 3001",
    "lint": "eslint --quiet .",
    "lint:fix": "eslint --fix .",
    "tests": "yarn kill && NODE_ENV=test nyc --reporter=html --reporter=text mocha tests/**/*.spec.js --exit",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nodemonConfig": {
    "events": {
      "restart": "yarn kill",
      "crash": "yarn kill"
    },
    "delay": "3000",
    "ignore": [
      "client/*"
    ]
  },
  "nyc": {
    "exclude": [
      "client"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.1.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "kill-port": "^1.6.0",
    "mocha": "^7.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@ion-phaser/react": "^1.2.1",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.3",
    "express-session": "^1.17.0",
    "helmet": "^3.21.2",
    "if-env": "^1.0.4",
    "mongoose": "^5.9.2",
    "mysql2": "^2.1.0",
    "node-sass": "^4.13.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-session": "^1.0.2",
    "phaser": "^3.22.0",
    "react-router": "^5.1.2",
    "react-router-transition": "^2.0.0",
    "scss": "^0.2.4",
    "sequelize": "^4.44.3",
    "stack": "^0.1.0"
  }
}
